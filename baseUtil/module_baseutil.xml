<?xml version="1.0" encoding="UTF-8"?>
<project name="module_baseutil" default="compile.module.baseutil">
  <dirname property="module.baseutil.basedir" file="${ant.file.module_baseutil}"/>
  
  <property name="module.jdk.home.baseutil" value="${jdk.home.android_api_23_platform}"/>
  <property name="module.jdk.bin.baseutil" value="${jdk.bin.android_api_23_platform}"/>
  <property name="module.jdk.classpath.baseutil" value="jdk.classpath.android_api_23_platform"/>
  
  <property name="compiler.args.baseutil" value="-encoding UTF-8 -source 1.7 -target 1.7 ${compiler.args}"/>
  
  <property name="baseutil.output.dir" value="${module.baseutil.basedir}/build/intermediates/classes/debug"/>
  <property name="baseutil.testoutput.dir" value="${module.baseutil.basedir}/build/intermediates/classes/test/debug"/>
  
  <path id="baseutil.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="baseutil.module.production.classpath">
    <path refid="${module.jdk.classpath.baseutil}"/>
    <path refid="library.support-annotations-23.4.0.classpath"/>
    <path refid="library.animated-vector-drawable-23.4.0.classpath"/>
    <path refid="library.support-v4-23.4.0.classpath"/>
    <path refid="library.support-vector-drawable-23.4.0.classpath"/>
    <path refid="library.gson-2.7.classpath"/>
    <path refid="library.appcompat-v7-23.4.0.classpath"/>
  </path>
  
  <path id="baseutil.runtime.production.module.classpath">
    <pathelement location="${baseutil.output.dir}"/>
    <path refid="library.support-annotations-23.4.0.classpath"/>
    <path refid="library.animated-vector-drawable-23.4.0.classpath"/>
    <path refid="library.support-v4-23.4.0.classpath"/>
    <path refid="library.support-vector-drawable-23.4.0.classpath"/>
    <path refid="library.gson-2.7.classpath"/>
    <path refid="library.appcompat-v7-23.4.0.classpath"/>
  </path>
  
  <path id="baseutil.module.classpath">
    <path refid="${module.jdk.classpath.baseutil}"/>
    <pathelement location="${baseutil.output.dir}"/>
    <path refid="library.support-annotations-23.4.0.classpath"/>
    <path refid="library.animated-vector-drawable-23.4.0.classpath"/>
    <path refid="library.hamcrest-core-1.3.classpath"/>
    <path refid="library.support-v4-23.4.0.classpath"/>
    <path refid="library.junit-4.12.classpath"/>
    <path refid="library.support-vector-drawable-23.4.0.classpath"/>
    <path refid="library.gson-2.7.classpath"/>
    <path refid="library.appcompat-v7-23.4.0.classpath"/>
  </path>
  
  <path id="baseutil.runtime.module.classpath">
    <pathelement location="${baseutil.testoutput.dir}"/>
    <pathelement location="${baseutil.output.dir}"/>
    <path refid="library.support-annotations-23.4.0.classpath"/>
    <path refid="library.animated-vector-drawable-23.4.0.classpath"/>
    <path refid="library.hamcrest-core-1.3.classpath"/>
    <path refid="library.support-v4-23.4.0.classpath"/>
    <path refid="library.junit-4.12.classpath"/>
    <path refid="library.support-vector-drawable-23.4.0.classpath"/>
    <path refid="library.gson-2.7.classpath"/>
    <path refid="library.appcompat-v7-23.4.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.baseutil">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.baseutil">
    <patternset refid="excluded.from.module.baseutil"/>
  </patternset>
  
  <path id="baseutil.module.sourcepath">
    <dirset dir="${module.baseutil.basedir}">
      <include name="build/generated/source/r/debug"/>
      <include name="build/generated/source/aidl/debug"/>
      <include name="build/generated/source/buildConfig/debug"/>
      <include name="build/generated/source/rs/debug"/>
      <include name="build/generated/res/rs/debug"/>
      <include name="build/generated/res/resValues/debug"/>
      <include name="src/main/res"/>
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  <path id="baseutil.module.test.sourcepath">
    <dirset dir="${module.baseutil.basedir}">
      <include name="build/generated/source/r/androidTest/debug"/>
      <include name="build/generated/source/aidl/androidTest/debug"/>
      <include name="build/generated/source/buildConfig/androidTest/debug"/>
      <include name="build/generated/source/rs/androidTest/debug"/>
      <include name="build/generated/res/rs/androidTest/debug"/>
      <include name="build/generated/res/resValues/androidTest/debug"/>
      <include name="src/androidTest/java"/>
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.baseutil" depends="compile.module.baseutil.production,compile.module.baseutil.tests" description="Compile module baseUtil"/>
  
  <target name="compile.module.baseutil.production" depends="register.custom.compilers" description="Compile module baseUtil; production classes">
    <mkdir dir="${baseutil.output.dir}"/>
    <javac2 destdir="${baseutil.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.baseutil}/javac">
      <compilerarg line="${compiler.args.baseutil}"/>
      <bootclasspath refid="baseutil.module.bootclasspath"/>
      <classpath refid="baseutil.module.production.classpath"/>
      <src refid="baseutil.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.baseutil"/>
    </javac2>
    
    <copy todir="${baseutil.output.dir}">
      <fileset dir="${module.baseutil.basedir}/build/generated/source/r/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.baseutil.basedir}/build/generated/source/aidl/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.baseutil.basedir}/build/generated/source/buildConfig/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.baseutil.basedir}/build/generated/source/rs/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.baseutil.basedir}/build/generated/res/rs/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.baseutil.basedir}/build/generated/res/resValues/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.baseutil.basedir}/src/main/res">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.baseutil.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.baseutil.tests" depends="register.custom.compilers,compile.module.baseutil.production" description="compile module baseUtil; test classes" unless="skip.tests">
    <mkdir dir="${baseutil.testoutput.dir}"/>
    <javac2 destdir="${baseutil.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.baseutil}/javac">
      <compilerarg line="${compiler.args.baseutil}"/>
      <bootclasspath refid="baseutil.module.bootclasspath"/>
      <classpath refid="baseutil.module.classpath"/>
      <src refid="baseutil.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.baseutil"/>
    </javac2>
    
    <copy todir="${baseutil.testoutput.dir}">
      <fileset dir="${module.baseutil.basedir}/build/generated/source/r/androidTest/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.baseutil.basedir}/build/generated/source/aidl/androidTest/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.baseutil.basedir}/build/generated/source/buildConfig/androidTest/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.baseutil.basedir}/build/generated/source/rs/androidTest/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.baseutil.basedir}/build/generated/res/rs/androidTest/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.baseutil.basedir}/build/generated/res/resValues/androidTest/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.baseutil.basedir}/src/androidTest/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.baseutil.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.baseutil" description="cleanup module">
    <delete dir="${baseutil.output.dir}"/>
    <delete dir="${baseutil.testoutput.dir}"/>
  </target>
</project>