<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_mm_fragment"
    android:orientation="vertical">

    <!-- webview 演示web调用Java -->
    <com.github.lzyzsd.jsbridge.BridgeWebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"></com.github.lzyzsd.jsbridge.BridgeWebView>


    <com.feigong.baseball.fgview.ViewTopBar
        android:id="@+id/viewTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.feigong.baseball.fgview.ViewTopBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.mrw.wzmrecyclerview.PullToLoad.PullToLoadRecyclerView
            android:id="@+id/list_item_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.mrw.wzmrecyclerview.PullToLoad.PullToLoadRecyclerView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="7dp">

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_text_area"
            android:hint="@string/comment_content" />

    </LinearLayout>


</LinearLayout>