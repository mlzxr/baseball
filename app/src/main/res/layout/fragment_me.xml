<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_mm_fragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/red">

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_avator"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/avator" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <com.feigong.baseball.fgview.View_ITI_Horizontal
            android:id="@+id/my_message_iti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"></com.feigong.baseball.fgview.View_ITI_Horizontal>

        <com.feigong.baseball.fgview.View_ITI_Horizontal
            android:id="@+id/my_collect_iti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.feigong.baseball.fgview.View_ITI_Horizontal>

        <com.feigong.baseball.fgview.View_ITI_Horizontal
            android:id="@+id/my_account_iti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"></com.feigong.baseball.fgview.View_ITI_Horizontal>

        <com.feigong.baseball.fgview.View_ITI_Horizontal
            android:id="@+id/my_setting_iti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.feigong.baseball.fgview.View_ITI_Horizontal>


    </LinearLayout>


</LinearLayout>


