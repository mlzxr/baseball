<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/lightgray"
    >

    <com.feigong.baseball.fgview.ViewTopBar
        android:id="@+id/viewTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.feigong.baseball.fgview.ViewTopBar>

    <com.feigong.baseball.fgview.View_ITI_Horizontal
        android:id="@+id/view_iti_account"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.feigong.baseball.fgview.View_ITI_Horizontal>

    <com.feigong.baseball.fgview.View_ITI_Horizontal
        android:id="@+id/view_iti_push"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.feigong.baseball.fgview.View_ITI_Horizontal>
    <com.feigong.baseball.fgview.View_ITI_Horizontal
        android:id="@+id/view_iti_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.feigong.baseball.fgview.View_ITI_Horizontal>


    <com.feigong.baseball.fgview.View_ITI_Horizontal
        android:id="@+id/view_iti_share"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.feigong.baseball.fgview.View_ITI_Horizontal>
    <com.feigong.baseball.fgview.View_ITI_Horizontal
        android:id="@+id/view_iti_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.feigong.baseball.fgview.View_ITI_Horizontal>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bt_login"
            style="@style/layout_mw"
            android:background="@drawable/shape_dodgerblue"
            android:text="@string/go_out"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</LinearLayout>