<resources>


    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme" parent="AppTheme.Base"></style>


    <style name="TranslucentTheme" parent="AppTheme">
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="layout_ww">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>



    <style name="layout_mm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>



    <style name="layout_mw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="layout_w_weight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>



    <style name="layout_h_weight">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="bottom_ll" parent="layout_h_weight">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="top_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="tab_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp </item>
    </style>



    <style name="tv_silver" parent="layout_ww">
        <item name="android:textColor">@color/silver</item>
    </style>

    <style name="layout_mm_fragment" parent="layout_mm">
        <item name="android:checkable">true</item>
        <item name="android:background">@color/layout_bottom</item>
    </style>


    <!--我的-->
    <style name="iti_left_image_width">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="iti_right_image_width">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ttiii_right_image_width">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <!--拍照-->
    <style name="take_picture_bg">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="item_one_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="item_one_titie" parent="layout_ww">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="item_title" parent="layout_mw">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <!--播放按钮-->
    <style name="item_video_play_image" >
        <item name="android:layout_width">28sp</item>
        <item name="android:layout_height">28sp</item>
    </style>

    <!--弹出输入框-->
    <style name="BottomDialog" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">false</item><!--无标题-->
        <item name="android:windowBackground">@color/tab_select_n</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>


    <!--评论-->
    <style name="item_comment" parent="layout_mw">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="item_comment_avatar">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
    </style>

    <style name="item_comment_title" parent="layout_ww">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="item_comment_title_img">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="item_video_title_img">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="item_comment_text" parent="layout_mw">
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="item_comment_reply" parent="layout_mw">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/gainsboro</item>
    </style>

    <style name="bt_style">
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@color/tab_select_s</item>
        <item name="android:textColor">@color/white</item>
    </style>





</resources>
