<?xml version="1.0" encoding="UTF-8"?>
<project name="module_okhttputils" default="compile.module.okhttputils">
  <dirname property="module.okhttputils.basedir" file="${ant.file.module_okhttputils}"/>
  
  <property name="module.jdk.home.okhttputils" value="${jdk.home.android_api_23_platform}"/>
  <property name="module.jdk.bin.okhttputils" value="${jdk.bin.android_api_23_platform}"/>
  <property name="module.jdk.classpath.okhttputils" value="jdk.classpath.android_api_23_platform"/>
  
  <property name="compiler.args.okhttputils" value="-encoding UTF-8 -source 1.7 -target 1.7 ${compiler.args}"/>
  
  <property name="okhttputils.output.dir" value="${module.okhttputils.basedir}/build/intermediates/classes/debug"/>
  <property name="okhttputils.testoutput.dir" value="${module.okhttputils.basedir}/build/intermediates/classes/test/debug"/>
  
  <path id="okhttputils.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="okhttputils.module.production.classpath">
    <path refid="${module.jdk.classpath.okhttputils}"/>
    <path refid="library.okio-1.8.0.classpath"/>
    <path refid="library.okhttp-3.3.1.classpath"/>
  </path>
  
  <path id="okhttputils.runtime.production.module.classpath">
    <pathelement location="${okhttputils.output.dir}"/>
    <path refid="library.okio-1.8.0.classpath"/>
    <path refid="library.okhttp-3.3.1.classpath"/>
  </path>
  
  <path id="okhttputils.module.classpath">
    <path refid="${module.jdk.classpath.okhttputils}"/>
    <pathelement location="${okhttputils.output.dir}"/>
    <path refid="library.okio-1.8.0.classpath"/>
    <path refid="library.okhttp-3.3.1.classpath"/>
  </path>
  
  <path id="okhttputils.runtime.module.classpath">
    <pathelement location="${okhttputils.testoutput.dir}"/>
    <pathelement location="${okhttputils.output.dir}"/>
    <path refid="library.okio-1.8.0.classpath"/>
    <path refid="library.okhttp-3.3.1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.okhttputils">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.okhttputils">
    <patternset refid="excluded.from.module.okhttputils"/>
  </patternset>
  
  <path id="okhttputils.module.sourcepath">
    <dirset dir="${module.okhttputils.basedir}">
      <include name="build/generated/source/r/debug"/>
      <include name="build/generated/source/aidl/debug"/>
      <include name="build/generated/source/buildConfig/debug"/>
      <include name="build/generated/source/rs/debug"/>
      <include name="build/generated/res/rs/debug"/>
      <include name="build/generated/res/resValues/debug"/>
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  <path id="okhttputils.module.test.sourcepath">
    <dirset dir="${module.okhttputils.basedir}">
      <include name="build/generated/source/r/androidTest/debug"/>
      <include name="build/generated/source/aidl/androidTest/debug"/>
      <include name="build/generated/source/buildConfig/androidTest/debug"/>
      <include name="build/generated/source/rs/androidTest/debug"/>
      <include name="build/generated/res/rs/androidTest/debug"/>
      <include name="build/generated/res/resValues/androidTest/debug"/>
      <include name="src/androidTest/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.okhttputils" depends="compile.module.okhttputils.production,compile.module.okhttputils.tests" description="Compile module okhttputils"/>
  
  <target name="compile.module.okhttputils.production" depends="register.custom.compilers" description="Compile module okhttputils; production classes">
    <mkdir dir="${okhttputils.output.dir}"/>
    <javac2 destdir="${okhttputils.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.okhttputils}/javac">
      <compilerarg line="${compiler.args.okhttputils}"/>
      <bootclasspath refid="okhttputils.module.bootclasspath"/>
      <classpath refid="okhttputils.module.production.classpath"/>
      <src refid="okhttputils.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.okhttputils"/>
    </javac2>
    
    <copy todir="${okhttputils.output.dir}">
      <fileset dir="${module.okhttputils.basedir}/build/generated/source/r/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.okhttputils.basedir}/build/generated/source/aidl/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.okhttputils.basedir}/build/generated/source/buildConfig/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.okhttputils.basedir}/build/generated/source/rs/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.okhttputils.basedir}/build/generated/res/rs/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.okhttputils.basedir}/build/generated/res/resValues/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.okhttputils.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.okhttputils.tests" depends="register.custom.compilers,compile.module.okhttputils.production" description="compile module okhttputils; test classes" unless="skip.tests">
    <mkdir dir="${okhttputils.testoutput.dir}"/>
    <javac2 destdir="${okhttputils.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.okhttputils}/javac">
      <compilerarg line="${compiler.args.okhttputils}"/>
      <bootclasspath refid="okhttputils.module.bootclasspath"/>
      <classpath refid="okhttputils.module.classpath"/>
      <src refid="okhttputils.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.okhttputils"/>
    </javac2>
    
    <copy todir="${okhttputils.testoutput.dir}">
      <fileset dir="${module.okhttputils.basedir}/build/generated/source/r/androidTest/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.okhttputils.basedir}/build/generated/source/aidl/androidTest/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.okhttputils.basedir}/build/generated/source/buildConfig/androidTest/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.okhttputils.basedir}/build/generated/source/rs/androidTest/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.okhttputils.basedir}/build/generated/res/rs/androidTest/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.okhttputils.basedir}/build/generated/res/resValues/androidTest/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.okhttputils.basedir}/src/androidTest/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.okhttputils" description="cleanup module">
    <delete dir="${okhttputils.output.dir}"/>
    <delete dir="${okhttputils.testoutput.dir}"/>
  </target>
</project>